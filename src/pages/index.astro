---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import OptimizedImage from '../components/OptimizedImage.astro';
import ResponsiveImage from '../components/ResponsiveImage.astro';
import { generatePlaceholder } from '../utils/imageUtils';

const pageTitle = "LPSell - Landing Pages Profissionais Entregues em Horas";
const pageDescription = "Obtenha landing pages profissionais, otimizadas e de alta conversão em poucas horas. Ideal para empreendedores, profissionais de marketing e pequenas empresas.";

// Placeholder para mockup de tela
const mockupPlaceholder = generatePlaceholder('#f8fafc', 600, 400);

// Dados dos passos de como funciona
const passos = [
  {
    icon: "select",
    titulo: "Escolha um Modelo",
    descricao: "Navegue por nossa galeria de modelos profissionais e escolha o que melhor se adapta ao seu negócio."
  },
  {
    icon: "customize",
    titulo: "Personalize",
    descricao: "Envie seu conteúdo, cores e imagens. Nós cuidamos de toda a implementação e ajustes."
  },
  {
    icon: "launch",
    titulo: "Receba e Publique",
    descricao: "Em poucas horas sua landing page estará pronta para ser publicada e começar a converter."
  }
];

// Dados dos benefícios
const beneficios = [
  "Design profissional e otimizado para conversão",
  "Entrega rápida em até 24 horas",
  "Otimizado para SEO e dispositivos móveis",
  "Hospedagem incluída por 12 meses",
  "Suporte técnico gratuito",
  "Integração com ferramentas de marketing"
];

// Dados dos depoimentos
const depoimentos = [
  {
    nome: "Ana Silva",
    empresa: "Startup Inovadora",
    texto: "Fiquei impressionada com a rapidez e qualidade. Minha landing page ficou pronta em menos de 24 horas e já está convertendo muito bem!",
    avatar: "/images/placeholder.svg"
  },
  {
    nome: "Carlos Mendes",
    empresa: "Agência Digital",
    texto: "Como agência, precisamos de soluções rápidas para nossos clientes. O LPSell tem sido um parceiro incrível para entregarmos landing pages de qualidade em tempo recorde.",
    avatar: "/images/placeholder.svg"
  }
];
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  canonicalUrl={Astro.url.href}
>
	<main class="min-h-screen bg-gradient-to-b from-indigo-50 to-white">
		<!-- Navbar fixa e moderna -->
		<header class="sticky top-0 z-50 bg-white/90 backdrop-blur-sm shadow-sm">
			<div class="container mx-auto px-4">
				<nav class="flex justify-between items-center py-4">
					<div class="text-2xl font-bold text-indigo-800"><a href="/area">LPSell</a></div>
					<div class="hidden md:flex items-center space-x-6">
						<a href="/.." class="text-gray-700 hover:text-indigo-600 transition-colors">Início</a>
						<a href="/#como-funciona" class="text-gray-700 hover:text-indigo-600 transition-colors">Como Funciona</a>
						<a href="/area" class="text-gray-700 hover:text-indigo-600 transition-colors">Modelos</a>
						<a href="/#depoimentos" class="text-gray-700 hover:text-indigo-600 transition-colors">Depoimentos</a>
						<a href="/#contato" class="text-gray-700 hover:text-indigo-600 transition-colors">Contato</a>
					</div>
					<a href="#" class="hidden md:inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-lg transition-colors shadow-sm">Adquirir Agora</a>
					<button class="md:hidden text-gray-700" aria-label="Menu">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
						</svg>
					</button>
				</nav>
			</div>
		</header>

		<!-- Hero section com headline impactante -->
		<section class="pt-20 pb-16 md:pt-28 md:pb-24 overflow-hidden section-padding">
			<div class="container mx-auto px-4">
				<div class="flex flex-col md:flex-row items-center justify-between gap-12">
					<div class="md:w-1/2 animate-on-scroll" data-animation="fadeInLeft">
						<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight font-heading">
							<span class="gradient-text">Landing Pages</span> Profissionais Entregues em Horas
						</h1>
						<p class="text-xl text-gray-700 mb-8 leading-relaxed">
							Páginas de alta conversão, otimizadas para SEO e responsivas, sem complicação.
							Ideal para empreendedores e profissionais de marketing que precisam de resultados rápidos.
						</p>
						<div class="flex flex-wrap gap-4">
							<a href="/area" class="btn-primary inline-flex items-center">
								Escolher um Modelo
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
								</svg>
							</a>
							<a href="#como-funciona" class="btn-secondary inline-flex items-center">
								Como Funciona
							</a>
						</div>
						
						<!-- Badges de confiança -->
						<div class="mt-10">
							<p class="text-sm text-gray-500 mb-4">CONFIADO POR EMPRESAS DE TODOS OS TAMANHOS</p>
							<div class="flex flex-wrap items-center gap-6 opacity-70">
								<div class="h-8 w-auto text-gray-400">Empresa 1</div>
								<div class="h-8 w-auto text-gray-400">Empresa 2</div>
								<div class="h-8 w-auto text-gray-400">Empresa 3</div>
								<div class="h-8 w-auto text-gray-400">Empresa 4</div>
							</div>
						</div>
					</div>
					<div class="md:w-1/2 animate-on-scroll" data-animation="fadeInRight">
						<div class="relative animate-float">
							<div class="absolute -top-6 -right-6 w-64 h-64 bg-indigo-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob"></div>
							<div class="absolute -bottom-8 -left-8 w-64 h-64 bg-pink-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000"></div>
							<div class="absolute top-1/2 left-1/2 w-64 h-64 bg-purple-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000"></div>
							<div class="relative">
								<div class="bg-white p-3 rounded-2xl shadow-xl">
									<!-- Barra de navegador simulada -->
									<div class="bg-gray-100 rounded-lg p-2 mb-2 flex items-center">
										<div class="flex space-x-1.5 mr-4">
											<div class="w-3 h-3 rounded-full bg-red-400"></div>
											<div class="w-3 h-3 rounded-full bg-yellow-400"></div>
											<div class="w-3 h-3 rounded-full bg-green-400"></div>
										</div>
										<div class="bg-white rounded-md flex-1 h-6 px-2 text-xs flex items-center text-gray-400">lpsell.com.br/modelo</div>
									</div>
									<div class="bg-gray-50 rounded-xl overflow-hidden">
										<ResponsiveImage
											src="/images/image.png"
											alt="Mockup de uma landing page profissional"
											width={600}
											height={400}
											class="w-full h-auto"
											loading="eager"
											fetchpriority="high"
										/>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Seção "Sobre o Projeto" -->
		<section class="py-16 bg-gray-50">
			<div class="container mx-auto px-4">
				<div class="max-w-3xl mx-auto text-center">
					<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Sobre o Projeto</h2>
					<p class="text-xl text-gray-700 leading-relaxed">
						Criamos o LPSell para ajudar empreendedores, profissionais de marketing e pequenas empresas 
						que precisam de landing pages bonitas, rápidas e acessíveis. Nosso objetivo é simplificar 
						o processo de criação de páginas de alta conversão, permitindo que você foque no que realmente 
						importa: seu negócio e seus clientes.
					</p>
				</div>
			</div>
		</section>

		<!-- Seção "Como Funciona" com 3 passos -->
		<section id="como-funciona" class="py-16 md:py-24 bg-gradient-to-b from-white to-gray-50 section-padding">
			<div class="container mx-auto px-4">
				<div class="text-center mb-16 animate-on-scroll" data-animation="fadeInUp">
					<span class="inline-block px-4 py-1 rounded-full bg-indigo-100 text-indigo-700 font-medium text-sm mb-4">PROCESSO SIMPLIFICADO</span>
					<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 font-heading">Como Funciona</h2>
					<p class="text-xl text-gray-700 max-w-3xl mx-auto">Processo simples e rápido para ter sua landing page profissional funcionando em tempo recorde.</p>
				</div>
				<div class="grid md:grid-cols-3 gap-8 md:gap-12">
					{passos.map((passo, index) => (
						<div class="bg-white rounded-xl p-8 shadow-sm hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 animate-on-scroll" data-animation="fadeInUp" data-animation-delay={`${index * 200}`}>
							<div class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center mb-6 text-white shadow-md">
								{passo.icon === "select" && (
									<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
									</svg>
								)}
								{passo.icon === "customize" && (
									<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
									</svg>
								)}
								{passo.icon === "launch" && (
									<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
									</svg>
								)}
							</div>
							<div class="flex items-center mb-4">
								<div class="w-8 h-8 rounded-full bg-indigo-600 text-white flex items-center justify-center mr-3 font-bold">{index + 1}</div>
								<h3 class="text-xl font-bold text-gray-900 font-heading">{passo.titulo}</h3>
							</div>
							<p class="text-gray-700">{passo.descricao}</p>
							<div class="mt-6 pt-6 border-t border-gray-100">
								<a href="/area" class="text-indigo-600 hover:text-indigo-800 font-medium inline-flex items-center text-sm">
									Ver modelos disponíveis
									<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
										<path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
									</svg>
								</a>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Benefícios section -->
		<section class="py-16 md:py-24 bg-gradient-to-b from-gray-50 to-white section-padding">
			<div class="container mx-auto px-4">
				<div class="text-center mb-16 animate-on-scroll" data-animation="fadeInUp">
					<span class="inline-block px-4 py-1 rounded-full bg-indigo-100 text-indigo-700 font-medium text-sm mb-4">BENEFÍCIOS EXCLUSIVOS</span>
					<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 font-heading">Por Que Escolher Nossas Landing Pages</h2>
					<p class="text-xl text-gray-700 max-w-3xl mx-auto">Soluções completas que combinam design, performance e resultados.</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{beneficios.map((beneficio, index) => (
						<div class="bg-white p-8 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 border border-gray-100 animate-on-scroll" data-animation="fadeInUp" data-animation-delay={`${index * 100}`}>
							<div class="w-14 h-14 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center text-white mb-6 shadow-md">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
							</div>
							<h3 class="text-xl font-bold text-gray-900 mb-4 font-heading">{beneficio}</h3>
							<p class="text-gray-700">Oferecemos soluções de alta qualidade para maximizar seus resultados.</p>
							<div class="mt-6 pt-4">
								<a href="/area" class="text-indigo-600 hover:text-indigo-800 font-medium inline-flex items-center text-sm">
									Ver exemplos
									<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
										<path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
									</svg>
								</a>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Seção de Depoimentos -->
		<section id="depoimentos" class="py-16 md:py-24 bg-gradient-to-b from-white to-gray-50 section-padding">
			<div class="container mx-auto px-4">
				<div class="text-center mb-16 animate-on-scroll" data-animation="fadeInUp">
					<span class="inline-block px-4 py-1 rounded-full bg-indigo-100 text-indigo-700 font-medium text-sm mb-4">DEPOIMENTOS</span>
					<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 font-heading">O Que Nossos Clientes Dizem</h2>
					<p class="text-xl text-gray-700 max-w-3xl mx-auto">Centenas de empreendedores e profissionais de marketing já transformaram seus resultados com nossas landing pages.</p>
				</div>
				<div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
					{depoimentos.map((depoimento, index) => (
						<div class="bg-white rounded-xl p-8 shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 relative animate-on-scroll" data-animation="fadeInUp" data-animation-delay={`${index * 150}`}>
							<!-- Aspas decorativas -->
							<div class="absolute -top-5 -left-2 text-indigo-100">
								<svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" viewBox="0 0 24 24" fill="currentColor">
									<path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
								</svg>
							</div>
							<div class="flex items-center mb-6">
								<div class="mr-4">
									<OptimizedImage
										src={depoimento.avatar}
										alt={`Foto de ${depoimento.nome}`}
										width={64}
										height={64}
										class="rounded-full"
									/>
								</div>
								<div>
									<h3 class="text-lg font-bold text-gray-900 font-heading">{depoimento.nome}</h3>
									<p class="text-gray-600">{depoimento.empresa}</p>
								</div>
							</div>
							<p class="text-gray-700 italic relative z-10 text-lg">"{depoimento.texto}"</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Seção de Contato -->
		<section id="contato" class="py-16 bg-gray-50">
			<div class="container mx-auto px-4">
				<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-12 text-center">Entre em Contato</h2>
				<div class="max-w-3xl mx-auto bg-white rounded-xl shadow-md overflow-hidden">
					<div class="md:flex">
						<div class="md:w-1/3 bg-indigo-600 text-white p-8">
							<h3 class="text-2xl font-bold mb-4">Informações</h3>
							<div class="space-y-4">
								<div class="flex items-start">
									<svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
									</svg>
									<div>
										<p class="font-medium">Email</p>
										<p>contato@lpsell.com.br</p>
									</div>
								</div>
								<div class="flex items-start">
									<svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
									</svg>
									<div>
										<p class="font-medium">Telefone</p>
										<p>(11) 99999-9999</p>
									</div>
								</div>
								<div class="flex items-start">
									<svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
									</svg>
									<div>
										<p class="font-medium">Horário de Atendimento</p>
										<p>Seg - Sex: 9h às 18h</p>
									</div>
								</div>
							</div>
						</div>
						<div class="md:w-2/3 p-8">
							<form class="space-y-6">
								<div class="grid md:grid-cols-2 gap-6">
									<div>
										<label for="nome" class="block text-sm font-medium text-gray-700 mb-1">Nome</label>
										<input type="text" id="nome" name="nome" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" placeholder="Seu nome" />
									</div>
									<div>
										<label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
										<input type="email" id="email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" placeholder="seu@email.com" />
									</div>
								</div>
								<div>
									<label for="assunto" class="block text-sm font-medium text-gray-700 mb-1">Assunto</label>
									<input type="text" id="assunto" name="assunto" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" placeholder="Assunto da mensagem" />
								</div>
								<div>
									<label for="mensagem" class="block text-sm font-medium text-gray-700 mb-1">Mensagem</label>
									<textarea id="mensagem" name="mensagem" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" placeholder="Sua mensagem"></textarea>
								</div>
								<div>
									<button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md transition-colors shadow-sm">Enviar Mensagem</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Call to action final -->
		<section class="py-20 md:py-28 bg-gradient-to-r from-indigo-600 to-purple-700 relative overflow-hidden section-padding">
			<!-- Elementos decorativos de fundo -->
			<div class="absolute top-0 left-0 w-full h-full overflow-hidden opacity-10">
				<div class="absolute -top-24 -right-24 w-96 h-96 bg-white rounded-full mix-blend-overlay filter blur-3xl"></div>
				<div class="absolute -bottom-24 -left-24 w-96 h-96 bg-white rounded-full mix-blend-overlay filter blur-3xl"></div>
			</div>
			
			<div class="container mx-auto px-4 text-center relative z-10">
				<div class="animate-on-scroll" data-animation="fadeInUp">
					<span class="inline-block px-4 py-1 rounded-full bg-indigo-500 bg-opacity-30 text-white font-medium text-sm mb-6">COMECE AGORA</span>
