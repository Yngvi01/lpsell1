---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Card from '../../components/Card.astro';
import OptimizedImage from '../../components/OptimizedImage.astro';
import { getCardBySlug, getAllCards } from '../../data/cards';
import '../../styles/global.css';

// Obter o slug da URL
const { slug } = Astro.params;

// Obter os dados do card com base no slug
const card = getCardBySlug(slug as string);

// Gerar as rotas estáticas para todos os cards
export async function getStaticPaths() {
  const cards = getAllCards();
  return cards.map(card => ({
    params: { slug: card.slug },
  }));
}

// Redirecionar para a página 404 se o card não for encontrado
if (!card) {
  return Astro.redirect('/404');
}

// Configurar meta tags dinâmicas baseadas no card atual
const pageTitle = `${card.title} - LPSell`;
const pageDescription = `Modelo de landing page: ${card.description}`;
---

<Layout
  title={pageTitle}
  description={pageDescription}
  canonicalUrl={Astro.url.href}
>
	<main class="bg-gradient-to-b from-gray-50 to-white  min-h-screen">
		<Header currentPage="modelo" />

		<div class="container mx-auto px-4 pt-8 pb-16">
			<div class="mb-8 animate-on-scroll" data-animation="fadeInLeft">
				<a href="/area" class="inline-flex items-center text-indigo-600 hover:text-indigo-800 transition-colors btn-secondary py-2 px-4">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
					</svg>
					Voltar para todos os modelos
				</a>
			</div>

			<article class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 animate-on-scroll" data-animation="fadeInUp">
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8 p-6 md:p-8">
					<div class="relative overflow-hidden">
						<!-- Elementos decorativos de fundo -->
						<div class="absolute -top-6 -right-6 w-64 h-64 bg-indigo-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob"></div>
						<div class="absolute -bottom-8 -left-8 w-64 h-64 bg-pink-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000"></div>
						<div class="absolute top-1/2 left-1/3 w-64 h-64 bg-purple-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000"></div>
						
						<!-- Badge de destaque -->
						<div class="absolute top right-2 z-10 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-sm font-medium px-3 py-1 rounded-full shadow-md">
							Modelo Premium
						</div>
						
						<div class="relative p-4">
							<!-- Barra de navegador simulada -->
							<div class="bg-gray-100 rounded-lg p-2 mb-2 flex items-center">
								<div class="flex space-x-1.5 mr-4">
									<div class="w-3 h-3 rounded-full bg-red-400"></div>
									<div class="w-3 h-3 rounded-full bg-yellow-400"></div>
									<div class="w-3 h-3 rounded-full bg-green-400"></div>
								</div>
								<div class="bg-white rounded-md flex-1 h-6 px-2 text-xs flex items-center text-gray-400">lpsell.com.br/modelo</div>
							</div>
							
							<div class="bg-white p-2 rounded-xl shadow-sm">
								<OptimizedImage
									src={card.imageUrl}
									alt={card.title}
									width={600}
									height={400}
									class="w-full h-auto rounded-lg featured-image"
								/>
							</div>
						</div>
					</div>
					<div>
						<span class="inline-block px-3 py-1 rounded-full bg-indigo-100 text-indigo-700 font-medium text-sm mb-4">MODELO EXCLUSIVO</span>
						<h1 class="text-3xl font-bold text-gray-900 mb-4 font-heading">{card.title}</h1>
						<p class="text-lg text-gray-700 mb-6">{card.description}</p>
						<div class="prose prose-indigo max-w-none">
							<h2 class="text-xl font-bold text-gray-900 mb-4 font-heading">Detalhes do modelo</h2>
							<div set:html={card.content} />
						</div>
						
						<!-- Características do modelo -->
						<div class="mt-6 mb-8 grid grid-cols-2 gap-4">
							<div class="flex items-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-600 mr-2" viewBox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
								</svg>
								<span class="text-gray-700">Responsivo</span>
							</div>
							<div class="flex items-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-600 mr-2" viewBox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
								</svg>
								<span class="text-gray-700">Otimizado SEO</span>
							</div>
							<div class="flex items-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-600 mr-2" viewBox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
								</svg>
								<span class="text-gray-700">Alta Conversão</span>
							</div>
							<div class="flex items-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-600 mr-2" viewBox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
								</svg>
								<span class="text-gray-700">Suporte Técnico</span>
							</div>
						</div>
						
						<div class="mt-8 flex flex-wrap gap-4">
							<a href="#" class="btn-primary inline-flex items-center">
								Adquirir Este Modelo
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
								</svg>
							</a>
							{card.demoUrl && (
								<a href={card.demoUrl} target="_blank" rel="noopener noreferrer" class="btn-secondary inline-flex items-center">
									Testar Modelo
									<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
										<path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z"></path>
										<path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z"></path>
									</svg>
								</a>
							)}
						</div>
					</div>
				</div>
			</article>

			<!-- Outros modelos relacionados -->
			<section class="mt-16 animate-on-scroll" data-animation="fadeInUp">
				<div class="text-center mb-12">
					<span class="inline-block px-4 py-1 rounded-full bg-indigo-100 text-indigo-700 font-medium text-sm mb-4">MAIS OPÇÕES</span>
					<h2 class="text-3xl font-bold text-gray-900 mb-4 font-heading">Outros modelos que podem te interessar</h2>
					<p class="text-lg text-gray-700 max-w-2xl mx-auto">Explore nossa coleção completa de modelos profissionais</p>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{getAllCards()
						.filter(otherCard => otherCard.id !== card.id)
						.slice(0, 3)
						.map((otherCard, index) => (
							<div class="animate-on-scroll" data-animation="fadeInUp" data-animation-delay={`${index * 100}`}>
								<a href={`/area/${otherCard.slug}`} class="block border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors duration-300 shadow-sm hover:shadow-md overflow-hidden">
									<OptimizedImage 
										src={otherCard.imageUrl} 
										alt={otherCard.title} 
										width={400} 
										height={300} 
										class="w-full h-48 object-cover"
									/>
									<div class="p-4">
										<h3 class="font-medium text-indigo-600">{otherCard.title}</h3>
										<p class="text-sm text-gray-500 mt-1">{otherCard.description.substring(0, 60)}...</p>
									</div>
								</a>
							</div>
						))
					}
				</div>
			</section>
			
			<!-- CTA section antes do footer -->
			<section class="mt-16 py-12 bg-gradient-to-r from-indigo-600 to-purple-700 rounded-2xl relative overflow-hidden animate-on-scroll" data-animation="fadeInUp">
				<!-- Elementos decorativos de fundo -->
				<div class="absolute top-0 left-0 w-full h-full overflow-hidden opacity-10">
					<div class="absolute -top-24 -right-24 w-96 h-96 bg-white rounded-full mix-blend-overlay filter blur-3xl"></div>
					<div class="absolute -bottom-24 -left-24 w-96 h-96 bg-white rounded-full mix-blend-overlay filter blur-3xl"></div>
				</div>
				
				<div class="relative z-10 text-center px-4">
					<h2 class="text-2xl md:text-3xl font-bold text-white mb-4 font-heading">Pronto para transformar seu negócio?</h2>
					<p class="text-lg text-indigo-100 mb-6 max-w-2xl mx-auto">
						Adquira este modelo agora e comece a aumentar suas conversões hoje mesmo.
					</p>
					<a href="https://wa.me/54999019635" target="_blank" rel="noopener noreferrer" class="btn-primary group relative inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 hover:scale-105">
						<span class="absolute inset-0 bg-gradient-to-r from-indigo-700 to-purple-700 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
						<span class="relative flex items-center">
							<svg class="w-5 h-5 mr-2 group-hover:rotate-[-15deg] transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path></svg>
							Adquirir Agora
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" viewBox="0 0 20 20" fill="currentColor">
								<path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
							</svg>
						</span>
					</a>
				</div>
			</section>
		</div>

		<!-- Footer completo -->
		<footer id="footer" class="bg-gray-900 text-gray-300 pt-16 pb-8">
			<div class="container mx-auto px-4">
				<div class="grid md:grid-cols-4 gap-8 mb-12">
					<div>
						<h3 class="text-xl font-bold text-white mb-4">LPSell</h3>
						<p class="mb-4">Landing pages profissionais entregues em horas, não em semanas.</p>
						<div class="flex space-x-4">
							<a href="#" class="text-gray-400 hover:text-white transition-colors" aria-label="Facebook">
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
									<path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd"></path>
								</svg>
							</a>
							<a href="#" class="text-gray-400 hover:text-white transition-colors" aria-label="Instagram">
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
									<path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd"></path>
								</svg>
							</a>
							<a href="#" class="text-gray-400 hover:text-white transition-colors" aria-label="Twitter">
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
									<path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
								</svg>
							</a>
						</div>
					</div>
					
					<div>
						<h3 class="text-lg font-semibold text-white mb-4">Links Rápidos</h3>
						<ul class="space-y-2">
							<li><a href="/" class="hover:text-white transition-colors">Início</a></li>
							<li><a href="/#como-funciona" class="hover:text-white transition-colors">Como Funciona</a></li>
							<li><a href="/area" class="hover:text-white transition-colors">Modelos</a></li>
							<li><a href="/#depoimentos" class="hover:text-white transition-colors">Depoimentos</a></li>
							<li><a href="/#contato" class="hover:text-white transition-colors">Contato</a></li>
						</ul>
					</div>

					<div>
						<h3 class="text-lg font-semibold text-white mb-4">Contato</h3>
						<ul class="space-y-2">
							<li class="flex items-start">
								<svg class="w-5 h-5 text-gray-400 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
								</svg>
								<span>contato@lpsell.com.br</span>
							</li>
							<li class="flex items-start">
								<svg class="w-5 h-5 text-gray-400 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
